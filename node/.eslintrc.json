{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": ["off"],
        "import/no-extraneous-dependencies": ["off"],
        "max-len": ["error", { "code": 120 }],
        "eqeqeq": ["warn"], // TODO -> make it an error ???
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}